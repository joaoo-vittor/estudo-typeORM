{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext"
    ],
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*":  ["*"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}